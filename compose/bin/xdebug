#!/bin/bash
__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
if [ "$1" == "disable" ]; then
  "${__dir}/cli" sed -i -e 's/^zend_extension/\;zend_extension/g' /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
  "${__dir}/restart" phpfpm
  echo "Xdebug has been disabled."
elif [ "$1" == "enable" ]; then
  "${__dir}/cli" sed -i -e 's/^\;zend_extension/zend_extension/g' /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
  "${__dir}/restart" phpfpm
  echo "Xdebug has been enabled."
else
  echo "Please specify either 'enable' or 'disable' as an argument"
fi
